{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Clean Database",
        "type": "shell",
        "command": "if (Test-Path ./dev.db) { Remove-Item ./dev.db -Force }; if (Test-Path ./dev.db-journal) { Remove-Item ./dev.db-journal -Force }",
        "windows": {
          "command": "if (Test-Path ./dev.db) { Remove-Item ./dev.db -Force }; if (Test-Path ./dev.db-journal) { Remove-Item ./dev.db-journal -Force }"
        },
        "linux": {
          "command": "rm -f ./dev.db ./dev.db-journal"
        },
        "osx": {
          "command": "rm -f ./dev.db ./dev.db-journal"
        },
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Run Migrations",
        "type": "shell",
        "command": "npx prisma migrate deploy",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Seed Database",
        "type": "shell",
        "command": "npx prisma db seed",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Start Server",
        "type": "shell",
        "command": "npx ts-node src/server.ts",
        "presentation": {
          "reveal": "always",
          "panel": "shared"
        },
        "problemMatcher": []
      },
      {
        "label": "Start Development Environment",
        "dependsOrder": "sequence",
        "dependsOn": [
          "Clean Database",
          "Run Migrations",
          "Seed Database",
          "Start Server"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": []
      }
    ]
  }